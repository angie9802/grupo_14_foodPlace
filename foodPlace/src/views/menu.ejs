<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs')  %> 
    <title>Menu</title>
    <link rel="stylesheet" href="/css/menu.css" />
    <link rel="stylesheet" href="/css/header-footer.css" />
  </head>
  <body>
    <div class="menu-box">
      <header>
        <nav class="nav-bar">
          <a href="/"><img class="logo" src="./img/logo.png" alt="logo" /></a>
          <a href="menu">Menu</a>
          <div class="search">
            <button><i class="fas fa-search"></i></button>
            <input
              type="text"
              name="search-bar"
              placeholder="Search..."
              class="search-input"
            />
          </div>
  
          <div class="container">
            <a href="register"><button>Register</button></a>
            <a href="login"><button>Log in</button></a>
          </div>
          <a href="shopping-cart"><i class="fas fa-shopping-cart"></i></a> 
          <i class="fas fa-user"></i>
        </nav>
        <nav class="nav-cell">
          <input type="checkbox" id="btn-menu" />
          <label for="btn-menu" class="burger-menu"
            ><i class="fas fa-bars fa-lg"></i
          ></label>
          <ul class="list">
            <li><a href="menu">Menu</a></li>
            <li><a href="register">Register</a></li>
            <li><a href="login">Log In</a></li>
            <li><a href="#">Log Out</a></li>
          </ul>
          <div class="search">
            <button><i class="fas fa-search"></i></button>
            <input
              type="text"
              name="search-bar"
              placeholder="Search..."
              class="search-input"
            />
          </div>
          <a href="shopping-cart"><i class="fas fa-shopping-cart"></i></a>
        </nav>
      </header>

      <main>
        <section class="box-products-categories">
          <article class="box-products-categories-title">
            <h1>Main Categories</h1>
          </article>


          <article class="box-products-categories-content">
            <div class="categories-content-single-product">
              <img src="/img/detail-hamburguer.jpg" />
              <p>Hamburguer</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/asiaticfood.jpg" />
              <p>Asiatic</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/chicken.jpg" />
              <p>Chicken</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/coffee.jpg" />
              <p>Coffee</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/crepes.jpg" />
              <p>Crepes</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/foodchinese.jpg" />
              <p>Chinese</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/icecream.jpg" />
              <p>Ice Cream</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/pasta.jpg" />
              <p>Pasta</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/sandwich.jpg" />
              <p>Sandwich</p>
            </div>

            <div class="categories-content-single-product">
              <img src="/img/vegan.jpg" />
              <p>Vegan</p>
            </div>
          </article>
        </section>

        <section class="box-products-banner">
          <!--Img background-->
        </section>

        <section class="box-products-bestsellers">
          <article class="box-products-bestsellers-title">
            <h1>Best Sellers</h1>
          </article>

          <article class="box-products-bestsellers-content">
            <div class="bestsellers-content-single-product">
              <img src="/img/chicken.jpg" />
              <h2>Roast Chicken</h2>
              <p>Time 20min</p>
            </div>

            <div class="bestsellers-content-single-product">
              <img src="/img/icecream.jpg" />
              <h2>Ice Cream</h2>
              <p>Time 10min</p>
            </div>

            <div class="bestsellers-content-single-product">
              <img src="/img/sandwich.jpg" />
              <h2>Sandwich</h2>
              <p>Time 15min</p>
            </div>

            <div class="bestsellers-content-single-product">
              <img src="/img/crepes.jpg" />
              <h2>Fruit crepes</h2>
              <p>Time 10min</p>
            </div>

            <div class="bestsellers-content-single-product">
              <img src="/img/vegan.jpg" />
              <h2>Vegetal Omelet</h2>
              <p>Time 25min</p>
            </div>
          </article>
        </section>
      </main>

      <footer>
        <%- include('./partials/footer.ejs') %> 
      </footer>
    </div>
  </body>
</html>
